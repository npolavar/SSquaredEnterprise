@model IEnumerable<SoftwareEnterprises.Models.Role>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-5 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary" asp-action="Create" asp-controller="Roles">Create New</a>
                    </div>
                    <div class="card-body">

                        <table class="table table-hover table-bordered">
                            <tr class="text-center">
                             <th>Roles</th>
                             
                            </tr>
                            @foreach(var item in Model)
                             {
                                <tr class="text-center">
                                    <td>@item.RoleName</td>
                                    
                                </tr>
                             }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

