@model SoftwareEnterprises.Models.Role

@{
    ViewData["Title"] = "Create";
}
<br />
<br />

<div class="container">
    <div class="col-md-12">
        <div class="row">
             <div class="col-md-6 offset-md-3">
                 <div class="card">
                     <div class="card-header">
                         <h4>Create New</h4>
                     </div>
                     <div class="card-body">
                         <form asp-action="Create">
                             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                             <div class="form-group">
                                 <label asp-for="RoleName" class="control-label"></label>
                                 <input placeholder="Role Name eg:HR" asp-for="RoleName" class="form-control" />
                                 <span asp-validation-for="RoleName" class="text-danger"></span>
                             </div>
                             <div class="form-group">
                               <div class="row">
                                   <div class="col-md-2">
                                       <input type="submit" value="Create" class="btn btn-success mt-2" />
                                   </div>
                                   <div class="col-md-3">
                                       <a class="btn btn-warning mt-2" asp-action="Index">Back to List</a>
                                     
                                   </div>
                               </div>

                                
                             </div>
                         </form>
                     </div>
                 </div>
             </div>
        </div>
    </div>
</div>

